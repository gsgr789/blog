---
// NewsletterForm.astro
// This is the frontmatter section where you can include JavaScript.
// Import the stylesheet at the top of your component
import '../styles/newsletter-form.css';

---
<div class="form-row">
  <p class="form-copy">Subscribe to get the best tips every 2 weeks delivered in your inbox</p>
</div>
  <form name="contact" method="POST" data-netlify="true" id="newsletter-form">
      <div class="form-row">
          <input type="email" id="email" name="email" placeholder="Enter your email" required>
          <button type="submit">Sign me up!</button>
      </div>
    </form>

<!--second form that appears after user enter email. this second form is to send the comment on struggling factors -->
    <div id="success-message" style="display: none;">
    <form id="comment-form" name="comment-form" method="POST" data-netlify="true">
      <input type="text" id="comment" name="comment" placeholder="Your Comment" required>
      <button type="submit" id="comment-submit">Submit Comment</button>
    </div>
    </form>
    <div id="thanks-comment" style="display: none;">Thanks for your comment!</div>
    <div id="problem-comment" style="display: none;">Oh no there was a problem</div>
<script src="/src/scripts/newsletter.js"></script>

