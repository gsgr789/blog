---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
  showNewsletterForm?: boolean; // Add this line to don't show newsletter form in index
}
const { title, description, permalink, current, showNewsletterForm } = Astro.props;
---
<html lang="en">
<head>
  <BaseHead title={title} description={description} permalink={permalink} />
</head>
<body>
  <div class="layout">
    <Header current={current} />

    <main>
      <slot />
    </main>

    <Footer showNewsletterForm={showNewsletterForm} /> <!-- Pass the prop here -->
  </div>
</body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    min-height: 100vh;
  }

  main {
    flex: 1;
    position: relative;
    margin: 0 auto;
    max-width: 1400px;
    padding: 1em 2em;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  /*resize hero images in index of posts so looks good*/
  .post-hero-image {
  width: 100%;
  height: auto;
  margin-bottom: 20px;
  border-radius: 8px;
}
</style>
